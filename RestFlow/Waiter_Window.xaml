<Window x:Class="RestMenef.Waiter_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="Waiter_Window" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Заказ" VerticalAlignment="Top">
                <Grid>
                    <Grid x:Name="dish" Background="#FFE5E5E5" Margin="10,10,10,45">
                        <ListBox x:Name ="List_CompoundOrder" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" Height="250" Width="500" FontSize="16"/>
                        
                        <Label Content="Сумма:" Margin="0,0,0,38" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        <Label x:Name="Label_TotalCost" Margin="65,0,0,38" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="29"/>
                        <Label Content="Столик:" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                        <TextBox x:Name="TextBox_TableNumber" FontSize="15" VerticalAlignment="Bottom" Margin="60,0,350,2" Height="28" />
                        <ComboBox x:Name="ComboBox_ChooseDish" HorizontalAlignment="Right" Margin="0,0,1,38" VerticalAlignment="Bottom" Width="218" FontSize="15"/>
                        <Label Content="Выберите блюдо" HorizontalAlignment="Right" Margin="0,284,225,38" VerticalAlignment="Bottom"/>
                        <Button x:Name="Button_AddDish" Click="Button_AddDish_Click" Content="Добавить блюдо" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="327" Height="28" FontSize="15" Margin="0,0,1,2"/>
                    </Grid>
                    <Button x:Name="Button_SendKitxhen" Content="Отправить на кухню" Height="37" Margin="10,0,10,5" FontSize="16" VerticalAlignment="Bottom" />
                </Grid>
            </TabItem>
            <TabItem Header="Активные" VerticalAlignment="Top">
                <Grid>
                    <ListBox x:Name="List_ActiveOrders" Margin="10,10,10,84">

                    </ListBox>
                    <Button x:Name="Button_EditOrder" Content="Редактировать" Margin="10,0,10,48" Height="30" VerticalAlignment="Bottom"/>
                    <Button x:Name="Button_FinishOrder" Content="Завершить" Margin="10,0,10,10" Width="776" Height="30" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Мой аккаунт" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid>
                    <Button x:Name="Button_LogOut" Content="Выход" Margin="0,0,10,10" FontSize="16" Height="36" Width="125" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
                    <Grid Margin="70,10,56,45">
                        <Label Content="Мой аккаунт" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="5,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="94"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="324,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoLogin" IsEnabled="False" HorizontalAlignment="Left" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="15" Height="23"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoPassword" IsEnabled="False" HorizontalAlignment="Left" Margin="404,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15" Height="23"/>
                        <Label Content="ФИО" x:Name="Label_AllInfo" Margin="5,90,0,0"></Label>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
