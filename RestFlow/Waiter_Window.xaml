<Window x:Class="RestMenef.Waiter_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="Официант" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Заказ" VerticalAlignment="Top" >
                <Grid>
                    <Grid x:Name="dish" Background="#FFE5E5E5" Margin="10,10,10,50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="225*"/>
                            <ColumnDefinition Width="225*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <ListBox x:Name ="List_CompoundOrder" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" Height="250" Width="400" FontSize="18" SelectionChanged="List_CompoundOrder_SelectionChanged"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Label Content="Количество" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,85,0,0"/>
                            <Label x:Name="Label_CurrentDishName" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Content="выберите блюдо"/>
                            <Label Content="Название:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                            <TextBox x:Name="TextBox_QuantityDishes" FontSize="18" VerticalAlignment="Top" Margin="115,90,10,0" Height="30"/>
                            <Button x:Name="Button_SaveQuantity" Click="Button_SaveQuantity_Click" FontSize="18" VerticalAlignment="Top" Margin="10,130,10,0" Height="30" Content="Сохранить"/>
                        </Grid>
                        <Grid Grid.ColumnSpan="2">
                            <Label Content="Сумма:" Margin="10,0,0,45" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <Label x:Name="Label_TotalCost" Margin="75,0,0,45" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="29" Width="250"/>
                            <Label Content="Столик:" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
                            <TextBox x:Name="TextBox_TableNumber" FontSize="15" VerticalAlignment="Bottom" Margin="75,0,364,10" Height="28" />
                            <ComboBox x:Name="ComboBox_ChooseDish" HorizontalAlignment="Right" Margin="0,0,10,45" VerticalAlignment="Bottom" Width="218" FontSize="15"/>
                            <Label Content="Выберите блюдо" HorizontalAlignment="Right" Margin="0,0,225,45" VerticalAlignment="Bottom" FontSize="14"/>
                            <Button x:Name="Button_AddDish" Click="Button_AddDish_Click" Content="Добавить блюдо" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="334" Height="28" FontSize="15" Margin="0,0,10,10"/>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Button_SendToKitchen" Content="Отправить на кухню" Height="37" Margin="10,0,10,5" FontSize="16" VerticalAlignment="Bottom" Click="Button_SendToKitchen_Click"/>
                        <Button x:Name="Button_CreateNewOrder" Grid.Column="1" Content="Новый заказ" Height="37" Margin="10,0,10,5" FontSize="16" VerticalAlignment="Bottom" Click="Button_CreateNewOrder_Click"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Активные" VerticalAlignment="Top" x:Name="Header_currentOrder">
                <Grid>
                    <ListBox x:Name="List_ActiveOrders" Margin="10,10,10,84" SelectionChanged="List_ActiveOrders_SelectionChanged">

                    </ListBox>
                    <Button x:Name="Button_EditOrder" Content="Редактировать" Margin="10,0,10,48" Height="30" VerticalAlignment="Bottom" Click="Button_EditOrder_Click"/>
                    <Button x:Name="Button_FinishOrder" Content="Завершить" Margin="10,0,10,10" Height="30" VerticalAlignment="Bottom" Click="Button_FinishOrder_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Мой аккаунт" HorizontalAlignment="Left">
                <Grid>
                    <Button x:Name="Button_LogOut" Click="Button_LogOut_Click" Content="Выход" Margin="0,0,10,10" FontSize="16" Height="36" Width="125" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
                    <Grid Margin="70,10,56,45">
                        <Label Content="Мой аккаунта" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="5,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="94"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="324,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoLogin" IsEnabled="False" HorizontalAlignment="Left" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="15" Height="23"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoPassword" IsEnabled="False" HorizontalAlignment="Left" Margin="404,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15" Height="23"/>
                        <Label Content="ФИО" x:Name="Label_AllInfo" Margin="5,90,0,0"></Label>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
