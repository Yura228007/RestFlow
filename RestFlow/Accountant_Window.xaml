<Window x:Class="RestMenef.Accountant_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="Бухгалтер" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Таблицы">
            <Grid>
                <DataGrid x:Name="DataGrid_Acountant" Margin="10,80,10,10" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="2*" Header="ID" Binding="{Binding Id}" FontSize="12" IsReadOnly="True"/>
                        <DataGridTextColumn Width="2*" Header="Стол" Binding="{Binding Table}" FontSize="14"/>
                        <DataGridTextColumn Width="3*" Header="Дата" Binding="{Binding OrderDate}" FontSize="14"/>
                        <DataGridTextColumn Width="3*" Header="Итоговая стоимость" Binding="{Binding TotalPrice}" FontSize="14"/>
                        <DataGridTextColumn Width="2*" Header="Итоговые затраты" Binding="{Binding PrimeCost}" FontSize="14"/>
                        <DataGridCheckBoxColumn Width="2*" Header="Активный" Binding="{Binding IsActive}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Итоговый доход:" Margin="10,11,682,369"></Label>
                <Label x:Name="Label_TotalPrice" Content="" Margin="117,297,402,83"></Label>
                <Label Content="Итоговый расход:" Margin="397,11,288,369"></Label>
                <Label x:Name="Label_PrimeCost" Content="" Margin="506,297,10,83"></Label>

                <Label Content="Начало:" Margin="10,42,733,333"></Label>
                <DatePicker x:Name="DatePicker_StartData" HorizontalAlignment="Left" Margin="66,42,0,0" VerticalAlignment="Top" Height="31"/>
                <Label Content="Конец:" Margin="397,42,349,333"></Label>
                <DatePicker x:Name="DatePicker_FinishData" HorizontalAlignment="Left" Margin="450,42,0,0" VerticalAlignment="Top" Height="31"/>

                <Button x:Name="Button_GetReport" Content="Получить отчёт" Margin="0,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.025,-0.098" Height="32" Width="138" FontSize="15" Click="Button_GetReport_Click" HorizontalAlignment="Right"/>
            </Grid>
        </TabItem>
        <TabItem Header="Мой аккаунт" HorizontalAlignment="Left">
            <Grid>
                <Button x:Name="Button_LogOut" Content="Выход" Margin="0,0,10,10" FontSize="16" Height="36" Width="125" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
                <Grid Margin="70,10,56,45">
                    <Label Content="Мой аккаунта" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label Content="Логин" HorizontalAlignment="Left" Margin="5,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="94"/>
                    <Label Content="Пароль" HorizontalAlignment="Left" Margin="324,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                    <TextBox IsReadOnly="True" x:Name="TextBox_InfoLogin" IsEnabled="False" HorizontalAlignment="Left" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="15" Height="23"/>
                    <TextBox IsReadOnly="True" x:Name="TextBox_InfoPassword" IsEnabled="False" HorizontalAlignment="Left" Margin="404,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15" Height="23"/>
                    <Label Content="ФИО" x:Name="Label_AllInfo" Margin="5,90,0,0"></Label>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>

</Window>
