<Window x:Class="RestMenef.User_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="User_Window" Height="450" Width="800">
    <Grid>
        <TabControl  VerticalContentAlignment="Top" HorizontalContentAlignment="Left">
            <TabItem Header="Меню">
                <Grid>
                    <!--<DataGrid Margin="10,10,10,46" x:Name="DataGrid_Menu">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="20*" Header="Блюдо" Binding="{Binding Dish}"></DataGridTextColumn>
                            <DataGridTextColumn Width="15*" Header="Состав" Binding="{Binding Состав}"></DataGridTextColumn>
                            <DataGridTextColumn Width="5*" Header="Цена" Binding="{Binding Цена}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>-->
                    <ListBox x:Name="List_Menu" Margin="10,10,10,84">

                    </ListBox>
                    <Button x:Name="Button_CheckDishComposition" Content="Узнать состав" Margin="10,0,10,44" VerticalAlignment="Bottom" Height="31"/>
                    <Button x:Name="Button_AddInBasket" Content="Добавить в корзину" Margin="10,0,10,5" VerticalAlignment="Bottom" Height="31"/>

                </Grid>
            </TabItem>
            <TabItem Header="Корзина">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="225*"/>
                        <ColumnDefinition Width="225*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Background="#FFE5E5E5"  Margin="20,20,0,20" Grid.Column="0">
                        <DataGrid Margin="0,0,0,31" x:Name="DataGrid_Basket" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="100*" Header="Блюдо" Binding="{Binding Dish}"></DataGridTextColumn>
                                <DataGridTextColumn Width="25*" Header="Цена" Binding="{Binding Цена}"></DataGridTextColumn>
                                <DataGridTextColumn Width="30*" Header="Кол-во" Binding="{Binding Кол-во}"></DataGridTextColumn>
                                <DataGridTextColumn Width="30*" Header="Сумма" Binding="{Binding Sum}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Итого:"  VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        <Label Content="" x:Name="Label_TotalCostBasket" VerticalAlignment="Bottom" Margin="51,0,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left"></Label>
                    </Grid>
                    <Grid  Margin="20" Grid.Column="1">
                        <Label Content="Адрес:" VerticalAlignment="Top" Margin="0,3,0,0" FontSize="14"></Label>
                        <Label Content="Улица" Margin="10,33,297,294"></Label>
                        <Label Content="Дом" Margin="10,64,297,264"></Label>
                        <Label Content="Квартира" Margin="10,93,292,236"></Label>
                        <TextBox x:Name="TextBox_AddressStreet" Height="25" Width="165" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="74,33,0,0"></TextBox>
                        <TextBox x:Name="TextBox_AddressHouse" Height="25" Width="165" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="74,63,0,0"></TextBox>
                        <TextBox x:Name="TextBox_AddressFlat" Height="25" Width="165" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="74,93,0,0"></TextBox>
                        <Label Content="Комментарий" VerticalAlignment="Top" Margin="0,128,0,0"></Label>
                        <TextBox x:Name="TextBox_Comment" Height="90" Width="357" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,158,0,0"></TextBox>
                        <Button x:Name="Button_MakeOrder" Content="Заказать" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30" Width="117" FontSize="16"></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Мой аккаунт" HorizontalAlignment="Left">
                <Grid>
                    <Button x:Name="Button_LogOut" Content="Выход" Margin="0,0,10,10" FontSize="16" Height="36" Width="125" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
                    <Grid Margin="70,10,56,45">
                        <Label Content="Мой аккаунта" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="5,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="94"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="324,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoLogin" IsEnabled="False" HorizontalAlignment="Left" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="15" Height="23"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoPassword" IsEnabled="False" HorizontalAlignment="Left" Margin="404,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15" Height="23"/>
                        <Label Content="ФИО" x:Name="Label_AllInfo" Margin="5,90,0,0"></Label>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
