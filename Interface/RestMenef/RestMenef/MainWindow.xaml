<Window x:Class="RestMenef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Panel_Login" Visibility="Hidden">
            <Label Content="Логин" HorizontalAlignment="Left" Margin="257,181,0,0" VerticalAlignment="Top" FontSize="16"/>
            <Label Content="Пароль" HorizontalAlignment="Left" Margin="257,215,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.509,-0.958"/>
            <TextBox x:Name="TextBox_LoginUser" HorizontalAlignment="Left" Margin="322,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="16"/>
            <TextBox x:Name="TextBox_PasswordUser"  HorizontalAlignment="Left" Margin="322,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="16"/>
            <Button Content="Войти" x:Name="Button_EnterUser" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" Width="100" FontSize="14" RenderTransformOrigin="0.565,3.876" Margin="322,256,0,0"/>
            <Button Content="Регистрация" x:Name="Button_RegistUser" HorizontalAlignment="Left" Margin="432,147,0,0" VerticalAlignment="Top" Width="82" Height="29" UseLayoutRounding="False"/>
            <Button Content="Войти как работник" x:Name="Button_EnterAsWorker" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Height="28" Width="131" FontSize="11"/>
            <Label Content="Войти в аккаунт" HorizontalAlignment="Left" Margin="257,142,0,0" VerticalAlignment="Top" FontSize="18"/>
        </Grid>
        <Grid x:Name="Panel_RegistUser" Visibility="Visible">
            <Label Content="Регистрация аккаунта" HorizontalAlignment="Left" Margin="261,57,0,0" VerticalAlignment="Top" FontSize="16"/>
            <Label Content="Имя" HorizontalAlignment="Left" Margin="261,93,0,0" VerticalAlignment="Top"/>
            <Label Content="Фамилия" HorizontalAlignment="Left" Margin="261,124,0,0" VerticalAlignment="Top"/>
            <Label Content="Пол" HorizontalAlignment="Left" Margin="261,155,0,0" VerticalAlignment="Top"/>
            <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="261,186,0,0" VerticalAlignment="Top"/>
            <Label Content="Телефон" HorizontalAlignment="Left" Margin="261,217,0,0" VerticalAlignment="Top"/>
            <Label Content="Логин" HorizontalAlignment="Left" Margin="261,248,0,0" VerticalAlignment="Top"/>
            <Label Content="Пароль" HorizontalAlignment="Left" Margin="261,279,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBox_RegistUserName" HorizontalAlignment="Left" Margin="356,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
            <TextBox x:Name="TextBox_RegistUserSurename" HorizontalAlignment="Left" Margin="356,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
            <TextBox x:Name="TextBox_RegistUserTelephoneNumber" HorizontalAlignment="Left" Margin="356,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
            <TextBox x:Name="TextBox_RegistUserLogin" HorizontalAlignment="Left" Margin="356,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
            <TextBox x:Name="TextBox_RegistUserPassword" HorizontalAlignment="Left" Margin="356,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
            <Button x:Name="Button_FinishRegist" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="339,315,0,0" VerticalAlignment="Top" FontSize="16" Height="36"/>
            <Label Content="Есть аккаунт?" HorizontalAlignment="Left" Margin="261,355,0,0" VerticalAlignment="Top" FontSize="10"/>
            <Button x:Name="Button_LoginUser" Content="Войти" HorizontalAlignment="Left" Margin="332,358,0,0" VerticalAlignment="Top" FontSize="10" RenderTransformOrigin="0.477,0.595"/>
            <RadioButton x:Name="RadioButton_RegistUserFemale" Content="Женщина" HorizontalAlignment="Left" Margin="355,161,0,0" VerticalAlignment="Top"  Height="23"/>
            <RadioButton x:Name="RadioButton_RegistUserMale" Content="Мужчина" HorizontalAlignment="Left" Margin="442,161,0,0" VerticalAlignment="Top"  Height="23"/>
            <DatePicker x:Name="DatePicker_RegistUserBirthday" HorizontalAlignment="Left" Margin="356,189,0,0" VerticalAlignment="Top" Height="25" Width="113"/>
        </Grid>
    </Grid>

</Window>
