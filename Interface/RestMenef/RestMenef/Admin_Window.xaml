<Window x:Class="RestMenef.Admin_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestMenef"
        mc:Ignorable="d"
        Title="Admin_Window" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Таблица работников">
                <Grid Margin="10">
                    <DataGrid x:Name="DataGrid_WorkersInfo" Margin="0,0,0,40">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="58*" Header="ФИО" Binding="{Binding Dish}"></DataGridTextColumn>
                            <DataGridTextColumn Width="27*" Header="Должность" Binding="{Binding Цена}"></DataGridTextColumn>
                            <DataGridTextColumn Width="36*" Header="Дата рождения" Binding="{Binding Кол-во}"></DataGridTextColumn>
                            <DataGridTextColumn Width="22*" Header="Зарплата" Binding="{Binding Sum}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="Button_SaveChanges" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="0,352,0,0" Width="380" FontSize="16" VerticalAlignment="Bottom" Height="30" />
                    <Button x:Name="Button_Dismiss" Content="Уволить" HorizontalAlignment="Right" Margin="390,0,0,0" Width="380" FontSize="16" VerticalAlignment="Bottom" Height="30" />
                </Grid>
            </TabItem>
            <TabItem Header="Зарегистрировать работника">
                <Grid>
                    <Grid Margin="64,30,64,30" Width="678" Height="319">
                        <Label Content="Новый аккаунт" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
                        <Label Content="Имя" HorizontalAlignment="Left" Margin="35,63,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="40"/>
                        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="232,63,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                        <Label Content="Пол" HorizontalAlignment="Left" Margin="35,103,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="38"/>
                        <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="259,103,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="120"/>
                        <Label Content="Почта" HorizontalAlignment="Left" Margin="34,149,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="52"/>
                        <Label Content="Телефон" HorizontalAlignment="Right" Margin="0,149,250,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="71"/>
                        <Label Content="Должность" HorizontalAlignment="Left" Margin="36,188,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="88"/>
                        <Label Content="Зарплата" HorizontalAlignment="Right" Margin="0,188,245,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="76"/>
                        <TextBox x:Name="TextBox_NewWorkerName" HorizontalAlignment="Left" Margin="80,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontSize="15" Height="22"/>
                        <TextBox x:Name="TextBox_NewWorkerSurename" HorizontalAlignment="Left" Margin="307,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="15" Height="22"/>
                        <TextBox x:Name="TextBox_NewWorkerEmail" HorizontalAlignment="Left" Margin="129,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" FontSize="15" Height="23"/>
                        <TextBox x:Name="TextBox_NewWorkerTelephoneNumber" HorizontalAlignment="Right" Margin="0,152,45,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" FontSize="15" Height="23"/>
                        <ComboBox x:Name="ComboBox_NewWorkerPost" HorizontalAlignment="Left" Margin="129,191,0,0" VerticalAlignment="Top" Width="211" FontSize="15" Height="22" ></ComboBox>
                        <TextBox x:Name="TextBox_NewWorkerSalary" HorizontalAlignment="Right" Margin="0,192,45,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" FontSize="15" Height="22"/>
                        <DatePicker x:Name="DatePicker_NewWorkerBirthday" HorizontalAlignment="Left" Margin="384,107,0,0" VerticalAlignment="Top" Height="22" Width="111"/>
                        <RadioButton x:Name="RadioButton_NewWorkerFemale" Content="Женщина" HorizontalAlignment="Left" Margin="81,112,0,0" VerticalAlignment="Top"  Height="23"/>
                        <RadioButton x:Name="RadioButton_NewWorkerMale" Content="Мужчина" HorizontalAlignment="Left" Margin="168,112,0,0" VerticalAlignment="Top"  Height="23"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="34,229,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="52"/>
                        <Label Content="Пароль" HorizontalAlignment="Right" Margin="0,229,250,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="71"/>
                        <TextBox x:Name="TextBox_NewWorkerLogin" HorizontalAlignment="Left" Margin="129,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" FontSize="15" Height="23"/>
                        <TextBox x:Name="TextBox_NewWorkerPassword" HorizontalAlignment="Right" Margin="0,231,45,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" FontSize="15" Height="23"/>
                        <Button x:Name="Button_AddWorker" Content="Зарегистрировать" Margin="0,275,45,0" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Right" Width="202" Height="34" ></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Мой аккаунт" HorizontalAlignment="Left">
                <Grid>
                    <Button x:Name="Button_LogOut" Content="Выход" Margin="0,0,10,10" FontSize="16" Height="36" Width="125" HorizontalAlignment="Right" VerticalAlignment="Bottom" ></Button>
                    <Grid Margin="70,10,56,45">
                        <Label Content="Мой аккаунта" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="5,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="94"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="324,60,0,0" VerticalAlignment="Top" FontSize="15" Height="30" Width="75"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoLogin" IsEnabled="False" HorizontalAlignment="Left" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="15" Height="23"/>
                        <TextBox IsReadOnly="True" x:Name="TextBox_InfoPassword" IsEnabled="False" HorizontalAlignment="Left" Margin="404,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontSize="15" Height="23"/>
                        <Label Content="ФИО" x:Name="Label_AllInfo" Margin="5,90,0,0"></Label>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
